{% extends 'base.html.twig' %}

{% block header %}
    {% include 'header.html.twig'  %}    
{% endblock %}

{% block content %}
    <!-- Main content -->

    <section class="content">
        <h1>Ticket</h1>

        <table>
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ tickets.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ tickets.name }}</td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('ticket_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('ticket_edit', { 'id': tickets.id }) }}">Edit</a>
            </li>
           <li>
                <a href="{{ path('ticket_pdf', { 'id': tickets.id }) }} ">telecharger</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </section>
{% endblock %}   


